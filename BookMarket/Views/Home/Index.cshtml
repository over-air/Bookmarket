@model ViewModels.Front.HomePage
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="border: 1px solid green;">
    <div class="col-sm-2">
        
    </div>
    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-12">
                首页
            </div>
        </div>
        <div class="row" style="height: 30px;">
            <div class="col-sm-12">
                <ul>
                    @foreach (var item in Model.Products)
                    {
                        
                        <li class="col-sm-3">
                            <a href="@Url.Action("ProDetail","Prodetail",new{proid=item.Product.Id})">
                                <img src="/Content/Image/@item.Product.Showurl" />

                                <p>描述： @item.Product.Description</p>
                                <p>价格： @item.Product.Cost</p>
                                <p>最低价：@item.FloorPrice</p>
                            </a>
                        </li>
                    }
                </ul>    
            </div>
        </div>
        
    </div>
    <div class="col-sm-2">
        
    </div>
</div>